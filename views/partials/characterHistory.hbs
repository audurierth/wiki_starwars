<!--
────────────────────────────────────────────────────────────
PARTIALS: Define a general partial element which can be reused several times.
────────────────────────────────────────────────────────────
 -->

{{#with singleChar}}
    <!--
    ────────────────────────────────────────────────────────────
    CHARACTER wiki information
    ────────────────────────────────────────────────────────────
     -->
    <div style="display: flex; justify-content: space-between">
        <button type="button" onclick="window.location.href='../holocron/update/{{id}}'" class="button__swtor"><img src="../assets/logo_small/edit.svg" alt="Update character button" style="max-height: 20%; max-width: 20%"/></button>
        <button type="button" onclick="window.location.href='../wiki/deletechar/{{id}}'" class="button__swtor"><img src="../assets/logo_small/delete.svg" alt="Delete character button" style="max-height: 20%; max-width: 20%"/></button>
    </div>


    <h2{{#ifCond side '==' 'dark'}}
    class="centered title dark">
    {{else}}
        class="centered title light">
    {{/ifCond}}
        {{name}}
    </h2>
    <article class="character">
        {{#if history}}

            <section class="column">
                <!--
                ────────────────────────────────────────────────────────────
                MAIN CONTENT ATTACHED TO THE LEFT: BIOGRAPHY, TITLE AND HISTORY
                ────────────────────────────────────────────────────────────
                 -->
                <div>
                    <p>{{biography}}</p>
                    {{#each history}}
                        <div>
                            <h1 class="subtitle"><span>{{@key}}</span></h1>
                            <p class="character__text">{{this}}</p>
                        </div>
                    {{/each}}
                </div>
                <!--
                ────────────────────────────────────────────────────────────
                SECONDARY CONTENT ATTACHED TO THE RIGHT: OTHERS INFORMATION
                ────────────────────────────────────────────────────────────
                 -->
                <div class="character panel">
                    <div class="column">
                        <img src="../assets/logo_small/small_{{side}}.webp" alt="Logo {{side}}" class="icon">
                        <img src="../assets/logo_small/small_{{side}}.webp" alt="Logo {{side}}" class="icon">
                    </div>
                    <img src="{{picture}}" alt="{{image_credits}}">
                    <p>Main planet: <span>{{main_planet}}</span></p>
                    <p>Lightsaber: <span>{{lightsaber_color}}</span></p>
                </div>
            </section>
        {{else}}
            <section>
                <h1 class="centered">Oops !</h1>
                <p class="centered">This character seems to not having any information.</p>
            </section>
        {{/if}}
    </article>
{{/with}}