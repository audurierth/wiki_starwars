{{> welcomemenu id='login' }}

<form class="ui stacked segment form" action="/authenticate" method="POST">
    <h3 class="title centered">Log-in</h3>
    <div class="field">
        <label>
            Email
            <input placeholder="Email" name="email" autofocus required class="caseform formboxsize centered">
        </label>
    </div>
    <div class="field">
        <label>
            Password
            <input type="password"  name="password" required class="caseform formboxsize centered" placeholder="Your password">
        </label>
    </div>
    <button class="submit menuButton centered button__swtor">Login</button>
</form>